{
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": 8
  },
  "env": {
    "node": true,
    "browser": true,
    "es6": true,
    "mocha": true,
    "mongo": true
  },
  "rules": {
    "comma-dangle": "warn",
    "linebreak-style": [
      "error",
      "windows"
    ],
    "no-underscore-dangle": [
      "warn",
      {
        "allow": ["_id", "_creator"]
      }
    ],
    "no-unused-vars": [
      "error",
      {
        "vars": "local",
        "args": "none"
      }
    ],
    "brace-style": [
      "error",
      "stroustrup"
    ],
  },
}
